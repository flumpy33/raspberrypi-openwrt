 CONFIG_WATCHDOG=y
 CONFIG_BCM2708_WDT=m
 CONFIG_MEDIA_SUPPORT=m
@@ -769,6 +773,33 @@ CONFIG_LEDS_TRIGGER_HEARTBEAT=m
 CONFIG_LEDS_TRIGGER_DEFAULT_ON=m
 CONFIG_RTC_CLASS=y
 CONFIG_RTC_DRV_DS1307=m
+CONFIG_RTC_DRV_DS1374=m
