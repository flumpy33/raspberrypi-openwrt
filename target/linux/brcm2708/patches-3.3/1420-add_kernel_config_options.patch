@@ -483,6 +485,8 @@ CONFIG_W1_SLAVE_DS2760=m
 CONFIG_W1_SLAVE_DS2780=m
 CONFIG_W1_SLAVE_BQ27000=m
 # CONFIG_HWMON is not set
+CONFIG_THERMAL=y
